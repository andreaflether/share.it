<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-5">

				<h2 class="title is-2 has-text-centered">Forgot your password?</h2>

				<%= form_for(@user, as: @user, url: password_path(resource_name), html: { method: :post }) do |f| %>

					<div class="field">
            <%= f.email_field_with_label :email, autofocus: true, autocomplete: "email", required: true %>
          </div>

          <small class="has-text-grey">We'll send you an e-mail with instructions on how to reset your password.</small>
          <div class="field is-grouped is-grouped-centered has-margin-top">
  					<p class="control">
  						<%= f.submit_primary "Submit" %>
  					</p>
  				</div>
				
				<% end %>
				<br />
				<%= render "devise/shared/links" %>

      </div>
    </div>
  </div>
</section>
