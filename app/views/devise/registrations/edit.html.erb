<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">

      <h2 class="title is-2">Edit <%= resource_name.to_s.humanize %> info</h2>
      <%= form_for(@user, as: @user, url: registration_path(resource_name)) do |f| %>


        <div class="field">
          <div class="control">
            <%= f.text_field_with_label :name, required: true, autofocus: true %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.email_field_with_label :email, required: true %>
          </div>
        </div>

        <div class="field">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
        <% end %>
        </div>

        <div class="field">
          <div class="control">
          <%= f.password_field_with_label :password, autocomplete: "off", required: false %>
          </div>
          <p class="help">leave it blank if you don't want to change it</p>
        </div>

        <div class="field">
          <div class="control">
          <%= f.password_field_with_label :password_confirmation, required: false %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.password_field_with_label :current_password, required: true %>
          </div>
          <p class="help">we need your current password to confirm your changes</p>
      </div>

      <%= f.submit_primary "Update" %>

    <% end %>

      <hr />
      <h3 class="title is-5">Cancel my account</h3>
      <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" },
        method: :delete %></p>

      </div>
    </div>
  </div>
</section>
